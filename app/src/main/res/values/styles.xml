<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearanceOverlay.RoundedSearchBar" parent="">
        <item name="cornerFamily">rounded</item>  <!-- Forme arrondie -->
        <item name="cornerSize">50%</item>       <!-- Rayon Ã  50% pour un arrondi complet -->
    </style>

    <!-- ============================================ -->
    <!-- Style pour le titre de la Toolbar -->
    <!-- ============================================ -->
    <style name="ToolbarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">25sp</item>         <!-- Taille du texte -->
        <item name="android:fontFamily">sans-serif-medium</item> <!-- Police -->
        <item name="android:textColor">@color/black</item> <!-- Couleur du texte -->
    </style>

    <!-- ============================================ -->
    <!-- Style pour les Chips de filtre -->
    <!-- ============================================ -->
    <style name="FilterButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="strokeColor">@color/gray_light</item> <!-- Utilisez votre couleur primaire -->
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawableTint">@color/gray_light</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">wrap_content</item> <!-- Ajout important -->
    </style>


    <style name="ShapeAppearanceOverlay.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CardTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    <style name="RoundedSearchBarShape">
            <item name="cornerFamily">rounded</item>
            <item name="cornerRadius">24dp</item>
            <item name="android:backgroundTint">@color/gray_light</item>
    </style>


</resources>